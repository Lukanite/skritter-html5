<?xml version='1.0' encoding='utf-8'?>
<widget id="com.inkren.skritter" version="0.0.5" xmlns="http://www.w3.org/ns/widgets">
    <name>Skritter</name>
    <description>
        Learn to write Chinese and Japanese characters.
    </description>
    <author email="mcfarljw@gmail.com" href="http://www.skritter.com">
        Joshua McFarland
    </author>
    <content src="index-cordova.html" />
    <feature name="App">
        <param name="android-package" value="org.apache.cordova.App" />
    </feature>
    <access origin="*" />
    <preference name="useBrowserHistory" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
</widget>